@page
@model Torneo.App.Frontend.Pages.Partidos.EditModel
@{
}

<div class="position_form">
    <h1 class="titulo_form">Editar Jugador</h1>
    <div class="container_form">
        <form class="flex_outer" method="post">
            <div class="form_group">
                <label asp-for="partido.Id"></label>
                <input asp-for="partido.Id" class="form_control_edit" readonly>
            </div>
            <div class="form_group">
                <label asp-for="partido.FechaHora"></label>
                <input asp-for="partido.FechaHora" class="form_control_edit">
            </div>
            <div class="form_group">
                <label asp-for="EquipoLocalSelected">Posicion</label>
                <select asp-for="EquipoLocalSelected" asp-items="@Model.EquipoLocalOptions" name="idLocal"
                    class="form_control_edit">
                </select>
            </div>
            <div class="form_group">
                <label asp-for="partido.MarcadorLocal">Marcador L</label>
                <input asp-for="partido.MarcadorLocal" class="form_control_edit" readonly>
            </div>
            <div class="form_group">
                <label asp-for="EquipoVisitanteSelected">Equipo</label>
                <select asp-for="EquipoVisitanteSelected" asp-items="@Model.EquipoVisitanteOptions" name="idVisitante" class="form_control_edit">
                </select>
            </div>
            <div class="form_group">
                <label asp-for="partido.MarcadorVisitante">Marcador V</label>
                <input asp-for="partido.MarcadorVisitante" class="form_control_edit" readonly>
            </div>
            <button type="submit" class="btn_form_edit">Editar Jugador</button>
        </form>
        <a class="btn-volver" asp-page="./Index">Volver</a>
    </div>
</div>