@page
@model Torneo.App.Frontend.Pages.DT.IndexModel
@{
}

<h1 class="titulo_tabla">Listado DT</h1>

<div class="container_tabla">
    <table class="tabla">
        <thead class="thead_container">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody class="tbody_container">
            @foreach (var dt in Model.dts)
            {
                <tr>
                    <th scope="row">@dt.Id</th>
                    <td>@dt.Nombre</td>
                    <td>
                        <a class="btn_details" asp-page="./Details" asp-route-id="@dt.Id"><i class="fa-solid fa-circle-info"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>