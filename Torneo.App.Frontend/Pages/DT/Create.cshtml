@page
@model Torneo.App.Frontend.Pages.DT.CreateModel
@{
}

<div class="position_form">
    <h1 class="titulo_form">Agregar DT</h1>
    <div class="container_form">
        <form class="flex_outer"  method="post">
            <div class="form_group">
                <label asp-for="dt.Nombre"></label>
                <input asp-for="dt.Nombre" class="form_control" placeholder="Ingrese nombre">
                <span class="text_danger" asp-validation-for="dt.Nombre"></span>
            </div>
            <div class="form_group">
                <label asp-for="dt.Documento"></label>
                <input asp-for="dt.Documento" class="form_control" placeholder="Ingrese documento">
                <span class="text_danger" asp-validation-for="dt.Documento"></span>
            </div>
            <div class="form_group">
                <label asp-for="dt.Telefono"></label>
                <input asp-for="dt.Telefono" class="form_control" placeholder="Ingrese telefono">
                <span class="text_danger" asp-validation-for="dt.Telefono"></span>
            </div>
            <button type="submit" class="btn_form_add">Crear DT</button>
        </form>
        <a class="btn-volver" asp-page="./Index">Volver</a>
    </div>
</div>