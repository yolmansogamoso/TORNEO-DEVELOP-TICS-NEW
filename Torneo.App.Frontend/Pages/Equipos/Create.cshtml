@page
@model Torneo.App.Frontend.Pages.Equipos.CreateModel
@{
}

<div class="position_form">
    <h1 class="titulo_form">Nuevo equipo</h1>
    <div class="container_form">
        <form class="flex_outer" method="post">
            <div class="form_group">
                <label asp-for="equipo.Nombre"></label>
                <input asp-for="equipo.Nombre" class="form_control" placeholder="Ingresar nombre">
            </div>
            <div class="form_group">
                <label for="idMunicipio">Municipio</label>
                <select id="idMunicipio" name="idMunicipio" class="form_control_selected">
                    @foreach (var municipio in Model.municipios)
                    {
                        <option value="@municipio.id">@municipio.Nombre</option>
                    }
                </select>
            </div>
            <div class="form_group">
                <label for="idDT">D.T.</label>
                <select id="idDT" name="idDT" class="form_control_selected">
                    @foreach (var dt in Model.dts)
                    {
                        <option value="@dt.Id">@dt.Nombre</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn_form_add" >Crear equipo</button>
        </form>
        <a  class="btn-volver" asp-page="./Index">Volver</a>
    </div>
</div>