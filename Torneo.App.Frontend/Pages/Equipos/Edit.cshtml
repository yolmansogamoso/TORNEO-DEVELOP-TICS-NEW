@page
@model Torneo.App.Frontend.Pages.Equipos.EditModel
@{
}
<div class="position_form">
    <h1 class="titulo_form">Editar equipo</h1>
    <div class="container_form">
        <form class="flex_outer" method="post">
            <div class="form_group">
                <label asp-for="equipo.Id"></label>
                <input asp-for="equipo.Id" class="form_control_edit" readonly>
            </div>
            <div class="form_group">
                <label asp-for="equipo.Nombre"></label>
                <input asp-for="equipo.Nombre" class="form_control_edit">
            </div>
            <div class="form_group">
                <label asp-for="MunicipioSelected">Municipio</label>
                <select asp-for="MunicipioSelected" asp-items="@Model.MunicipioOptions" name="idMunicipio"
                    class="form_control_edit">
                </select>
            </div>
            <div class="form_group">
                <label asp-for="DTSelected">D.T.</label>
                <select asp-for="DTSelected" asp-items="@Model.DTOptions" name="idDT" class="form_control_edit">
                </select>
            </div>
            <button type="submit" class="btn_form_edit">Editar equipo</button>
        </form>
        <a class="btn-volver" asp-page="./Index">Volver</a>
    </div>
</div>